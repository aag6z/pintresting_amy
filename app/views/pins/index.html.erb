<%= render 'pages/home' unless user_signed_in? %>
<% if user_signed_in? %>
<div id="username">
	<%= image_tag(current_user.avatar.url(:thumb), class: "img-circle") %>
	<%= current_user.name %>
</div>

<% end %>
<br>
<div id="pins" class="transitions-enabled">
	<% @pins.each do |pin| %>
		<div class="box panel panel-default">
      		<%= image_tag pin.image.url(:medium) %>
      		<div class="panel-body">
        	<%= pin.description %><br/>
        	<strong><%= pin.user.name if pin.user %></strong>
        	
        	<% if pin.user == current_user %>
          		<div class="actions">
   					<%= link_to edit_pin_path(pin) do %><span class="glyphicon glyphicon-edit"></span> Edit
        			<% end %>
          			<%= link_to pin, method: :delete, data: { confirm: 'Are you sure?' } do %><span class="glyphicon glyphicon-trash"></span> Delete
            		<% end %>
            		<br>
            		<% url = pin.image.url(:medium)%>
            		<%= link_to new_pin_comment_path(pin, :url => url) do %><span class="glyphicon glyphicon-comment"></span> Comment
            		<% end %>
          		</div>
        	<% end %>
        	<br>
        	<% @comments = pin.comments %>
        	<% @comments.each do |comment|%>
        	<blockquote>
        	<%= comment.text %>
        	</blockquote>
        	<br>
        	<% end %>
      		</div>
  			</div>
	<% end %>
</div>


<div class="center">
   <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
</div>

